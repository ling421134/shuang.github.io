    <script>
        // 物流数据
        const logisticsData = [
            {phone: '15207827686', com: 'yuantong', nu: 'YT7579138178139'},
            {phone: '13878743411', com: 'sxjdfreight', nu: 'S35323317634'},
            {phone: '15177070519', com: 'yuantong', nu: 'YT7579137980713'},
            {phone: '15777948745', com: 'yuantong', nu: 'YT7579138256174'},
            {phone: '19911214887', com: 'yuantong', nu: 'YT7579137324016'},
            {phone: '18677689300', com: 'sxjdfreight', nu: 'S35323317610'},
            {phone: '13978873889', com: 'yuantong', nu: 'YT7579136558306'},
            {phone: '13097766689', com: 'yuantong', nu: 'YT7579136558311'},
            {phone: '13557790663', com: 'sxjdfreight', nu: 'S35323300339'},
            {phone: '18677011625', com: 'sxjdfreight', nu: 'S35323317658'},
            {phone: '18977906046', com: 'yuantong', nu: 'YT7579138962659'},
            {phone: '13097800511', com: 'yuantong', nu: 'YT7579138414930'},
            {phone: '13407727027', com: 'yuantong', nu: 'YT7579136715396'},
        ];

        // 快递公司代码映射
        const companyMap = {
            'yuantong': '圆通速递',
            'sxjdfreight': '顺心捷达',
            'sto': '申通快递',
            'yto': '圆通速递',
            'zto': '中通快递',
            'htky': '百世快递',
            'yd': '韵达速递',
            'sf': '顺丰速运',
            'ems': 'EMS',
            'ttk': '天天快递',
            'jd': '京东物流'
        };

        let currentRecord = null;

        function searchLogistics() {
            const inputPhone = document.getElementById('phoneInput').value.trim();
            const messageElement = document.getElementById('errorMessage');
            messageElement.style.display = 'none';

            // 简单验证输入
            if (!inputPhone) {
                showError('请输入手机号！');
                return;
            }
            
            if (!/^1[3-9]\d{9}$/.test(inputPhone)) {
                showError('请输入有效的11位手机号码！');
                return;
            }

            // 在数据数组中查找匹配的记录
            const record = logisticsData.find(item => item.phone === inputPhone);

            if (record) {
                currentRecord = record;
                showResult(record);
            } else {
                showError('未找到该手机号对应的物流信息，请核对后重试。');
            }
        }

        function showResult(record) {
            // 更新结果页面信息
            document.getElementById('resultPhone').textContent = record.phone;
            document.getElementById('resultNu').textContent = record.nu;
            document.getElementById('resultCom').textContent = companyMap[record.com] || record.com;
            document.getElementById('resultStatus').textContent = '运输中';
            
            // 切换到结果页面
            document.getElementById('searchSection').style.display = 'none';
            document.getElementById('resultSection').style.display = 'block';
        }

        function showError(message) {
            const messageElement = document.getElementById('errorMessage');
            messageElement.innerHTML = `<i class="fas fa-exclamation-circle"></i> ${message}`;
            messageElement.style.display = 'block';
            
            // 添加抖动动画
            messageElement.style.animation = 'none';
            setTimeout(() => {
                messageElement.style.animation = 'shake 0.5s ease';
            }, 10);
        }

        function openKuaidi100() {
            if (currentRecord) {
                const kuaidi100Url = `https://www.kuaidi100.com/chaxun?com=${currentRecord.com}&nu=${currentRecord.nu}`;
                window.open(kuaidi100Url, '_blank');
            }
        }

        function backToSearch() {
            document.getElementById('resultSection').style.display = 'none';
            document.getElementById('searchSection').style.display = 'block';
            document.getElementById('phoneInput').value = '';
            document.getElementById('phoneInput').focus();
        }

        // 让用户按回车键也能触发查询
        document.getElementById('phoneInput').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                searchLogistics();
            }
        });

        // 页面加载完成后让输入框自动获得焦点
        window.onload = function() {
            document.getElementById('phoneInput').focus();
        };
    </script>
</body>
</html>
